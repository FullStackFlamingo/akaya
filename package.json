{
  "name": "akaya",
  "description": "Generate URIs based on named hapi routes and their parameters",
  "keywords": [
    "hapi",
    "url",
    "uri",
    "route",
    "routes"
  ],
  "version": "1.0.1",
  "license": "BSD-3-Clause",
  "author": {
    "name": "Felix Heck",
    "email": "hi@whoTheHeck.de",
    "url": "http://whoTheHeck.de"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixheck/akaya.git"
  },
  "bugs": {
    "email": "hi@whoTheHeck.com",
    "url": "https://github.com/felixheck/akaya/issues"
  },
  "main": "./lib/index.js",
  "config": {
    "tapeOptions": "-r babel-core/register test/**/*.spec.js"
  },
  "scripts": {
    "build": "babel -d lib src",
    "coverage": "NODE_ENV=test istanbul cover tape -- $npm_package_config_tapeOptions | tap-spec",
    "lint": "eslint --ext .js src",
    "start": "watch 'npm test' src test --wait 5 --interval 1",
    "test": "NODE_ENV=test tape $npm_package_config_tapeOptions | tap-spec",
    "prebuild": "rm -rf lib",
    "precoverage": "rm -rf coverage",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.18.0",
    "eslint": "3.10.2",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.1",
    "hapi": "^15.2.0",
    "istanbul": "^1.0.0-alpha.2",
    "sinon": "^1.17.6",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.2",
    "watch": "^1.0.1"
  },
  "dependencies": {
    "hoek": "^4.1.0",
    "joi": "^10.0.1",
    "lodash": "^4.17.2",
    "qs": "^6.3.0"
  },
  "peerDependencies": {
    "hapi": ">= 13.x.x"
  }
}
